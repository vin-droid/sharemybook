  
<div class="login-page">
 <div class="login-box">
   <div class="row main">
     <div class="col m6 s12">
       
     <div class="row">
      <form class="col s12 no-pad">
     
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :username, autofocus: true,:maxlength => 15, 'data-length': 50 ,autocomplete: "false" ,placeholder:'Enter Your Email' %>
            <%= f.label :username ,id:'user_username'%>
           <!--  <input id="username" type="text" data-length="50"> -->
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">

            <%= f.password_field :password, autocomplete: "new-password" , class:"validate",placeholder:'Enter Password'%>
            <%= f.label :password %>
          </div>
        </div>
        <div class="row">
          <% if devise_mapping.rememberable? -%>
          <div class="col s12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end%>
        </div>
        <div class="row">
        <div class="col s12">
          <%= f.submit "Log in", class:'waves-effect waves-light btn'%>
        </div>
        </div>
        <% end %>
      </form>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Don't have account? Create one now!", new_registration_path(resource_name) %><br />
      <% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>
    </div>
     </div>
    <div class="col m6 s12 social-login-form">
       <div class="or-tag">
       <span><hr></span>
       <div class="or-box">
        <span class="or-text">or</span>  
       </div> 
       <span><hr></span> 
       </div>
       <ul>
         <li class="fb-btn waves-effect waves-light login-btn" ><%= link_to 'Sign In with Facebook','/users/auth/facebook'%></li>
         <li class="twitter-btn waves-effect waves-light login-btn"><%= link_to 'Sign In with Linked In','/users/auth/linkedin'%> </li>
         <li class="gplus-btn waves-effect waves-light login-btn"><%= link_to 'Sign In with Google+','/users/auth/google_oauth2'%></li>
         <%#= render "devise/shared/links" %>
       </ul>
   </div>
 </div>
</div> 
</div>





