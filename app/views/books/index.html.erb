<link rel="stylesheet" href="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css">

<div class="container">
	<div class="row">
		<%if @books.present?%>
		<%@books.each do |book| %>
		<div class="col-md-3 col-xs-12">
			<div class="card", style="max-width:446px;">
				<%= image_tag(book.cover.image.url,class:"card-img-top img-fluid") if book.cover.present? %>
				<div class="card-block">
					<h4 class="card-title"><%= book.name %></h4>
					<p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
					<h5>Author</h5><%= book.author%> <br>
					<h5>Uploaded at </h5>
					<%= book.published_at%><br>
				</div>
			</div>
		</div>
		<%end%>
		<%end%>	 
	</div>
</div>
<%= link_to 'create book' , new_book_path , class:"btn btn-info btn-xs"%>

